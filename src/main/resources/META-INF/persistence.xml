<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="libraryDatabase" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>nl.quintor.model.Album</class>
        <class>nl.quintor.model.Artist</class>
        <class>nl.quintor.model.Song</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:9095/cdlibrary"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="hollink"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>

        </properties>

    </persistence-unit>
</persistence>